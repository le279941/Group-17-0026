# Define a function to determine the shape of the data based on its histogram
determine_shape <- function(data_column) {
skewness_value <- skewness(data_column)
if(abs(skewness_value) < 0.5) {
skewness_desc <- "approximately symmetric"
} else if(skewness_value > 0) {
skewness_desc <- "skewed right (positively skewed)"
} else {
skewness_desc <- "skewed left (negatively skewed)"
}
# Simple method to determine modality: by counting peaks in the histogram
hist_data <- hist(data_column, plot = FALSE)
peak_count <- sum(diff(sign(diff(hist_data$counts))) < 0)
if(peak_count > 1) {
modality_desc <- "bimodal or multimodal"
} else {
modality_desc <- "unimodal"
}
return(paste(skewness_desc, "and", modality_desc))
}
# Load necessary package for skewness function
install.packages("e1071")
library(e1071)
# Loop through each quantitative variable to display histograms
for(col_name in names(data)) {
if(is.numeric(data[[col_name]])) {
# Basic histogram using base R
hist(data[[col_name]], main = paste("Histogram of", col_name),
xlab = col_name, col = "lightblue", border = "black", breaks = 30)
# Display basic statistics and shape description on the histogram plot
cat("\nDescriptive statistics for", col_name, ":\n")
print(summary(data[[col_name]]))
cat("\nThe distribution is", determine_shape(data[[col_name]]), "\n")
# Wait for the user to close the current graphics window before displaying the next histogram
readline(prompt="Press [enter] to continue")
}
}
View(determine_shape)
